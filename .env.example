# BOM2Pic Environment Configuration
# Copy this file to .env and update values for your environment

# Environment
NODE_ENV=development
DEBUG=true

# Server Configuration  
BASE_URL=http://localhost:8000
PORT=8000

# Database (automatically set based on environment)
# Local: data/users.db
# Render: /opt/render/project/data/users.db

# Authentication
ADMIN_KEY=bom2pic_admin_2024

# PayPal Configuration (Sandbox for development)
PAYPAL_CLIENT_ID=your_sandbox_client_id
PAYPAL_CLIENT_SECRET=your_sandbox_client_secret
PAYPAL_ENVIRONMENT=sandbox

# Production overrides (set these in Render dashboard)
# NODE_ENV=production
# DEBUG=false
# BASE_URL=https://bom2pic.com
# ADMIN_KEY=secure_random_production_key
# PAYPAL_ENVIRONMENT=live
